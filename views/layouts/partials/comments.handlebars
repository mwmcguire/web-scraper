<div class="modal fade" id="comment-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">{{this.headline}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{#if this.comment}}
        {{#each this.comment}}
        <div class="panel panel-default">
          <div class="panel-body">
            <p class="previous-comments">{{this.text}}</p>
            <button type="button" class="btn btn-danger delete-comment" data-commment-id={{this._id}}
              data-article-id={{this.article}}>X</button>
          </div>
        </div>
        {{/each}}
        {{else}}
        <div class="panel panel-default">
          <div class="panel-body">
            <h4>No comments for this article yet.</h4>
          </div>
        </div>
        {{/if}}
        <div class="form-group">
          <textarea id="comment-text{{this._id}}" class="form-control" rows="4" placeholder="New comment"></textarea>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary save-comment" data-id={{this._id}}>Save Comment</button>
      </div>
    </div>
  </div>
</div>